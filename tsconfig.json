{
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "src",
    "baseUrl": ".",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ESNext"],
    "downlevelIteration": true,
    "target": "ESNext",
    "skipLibCheck": true,
    "stripInternal": true
  },
  "include": ["src/**/*"]
}
